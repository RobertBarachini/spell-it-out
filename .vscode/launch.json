	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch index.js",
			"program": "${workspaceFolder}/src/index.ts",
			"preLaunchTask": "npm run build",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch current file",
			"program": "${file}",
			"preLaunchTask": "npm run build",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		}
	]
}